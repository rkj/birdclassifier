{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (No GUI)",
      "description": "Basic build with tests, no GUI",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "BUILD_GUI": "OFF"
      }
    },
    {
      "name": "gui",
      "displayName": "GUI Build",
      "description": "Build with Qt6 GUI enabled",
      "binaryDir": "${sourceDir}/build/gui",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "BUILD_GUI": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Optimized release build with GUI",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "OFF",
        "BUILD_GUI": "ON"
      }
    },
    {
      "name": "vcpkg",
      "displayName": "Vcpkg (No GUI)",
      "description": "Build with vcpkg toolchain and manifest dependencies",
      "binaryDir": "${sourceDir}/build/vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "BUILD_GUI": "OFF",
        "CMAKE_TOOLCHAIN_FILE": "${env:VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "vcpkg-gui",
      "displayName": "Vcpkg GUI Build",
      "description": "GUI build using vcpkg-managed dependencies",
      "binaryDir": "${sourceDir}/build/vcpkg-gui",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "BUILD_GUI": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${env:VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "gui",
      "configurePreset": "gui"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "vcpkg",
      "configurePreset": "vcpkg"
    },
    {
      "name": "vcpkg-gui",
      "configurePreset": "vcpkg-gui"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "gui",
      "configurePreset": "gui",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "vcpkg",
      "configurePreset": "vcpkg",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "vcpkg-gui",
      "configurePreset": "vcpkg-gui",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
